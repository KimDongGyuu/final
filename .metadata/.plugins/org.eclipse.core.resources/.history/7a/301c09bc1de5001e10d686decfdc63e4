<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ace.company_news">
	<insert id="company_newsWrite"
		parameterType="com.ace.company_news.model.Company_newsDTO">
		insert into company_news
		values(#{com_idx},company_news_news_idx.nextval,#{news_writer},#{news_title},#{news_content},sysdate,0)
	</insert>
	
	<select id="company_newsList" resultType="com.ace.company_news.model.Company_newsDTO">
	select * from
	(select * from
	(select rownum as rnum,a.*from
	(select * from company_news order by news_idx desc)a)b 
	where rnum <![CDATA[>=]]>#{start} and rnum<![CDATA[<=]]>#{end})c
	where com_idx=#{com_idx}
	</select>
	
	<select id="company_newsSearch" parameterType="java.util.Map" resultType="com.ace.company_news.model.Company_newsDTO">	
	select * from
	(select rownum as rnum,a.*from
	(select * from company_news where news_title like '%' || #{keyword} || '%' order by news_idx desc)a)b 
	where rnum <![CDATA[>=]]>#{start} and rnum<![CDATA[<=]]>#{end}
	</select>
	
	<select id="SearchTotalCnt" parameterType="String" resultType="Integer">
	select count(*) from company_news where news_title like '%' || #{keyword} || '%'
	</select>
	
	<select id="totalCnt" resultType="Integer">
	select count(*) from company_news
	</select>
	
	<select id="company_newsContent" parameterType="Integer"  resultType="com.ace.company_news.model.Company_newsDTO">
	select * from company_news where news_idx=#{news_idx}
	</select>
	
	<delete id="company_newsDelete" parameterType="Integer">
	delete from company_news where news_idx=#{news_idx}
	</delete>
	
	<select id="company_newsUpdateForm" parameterType="Integer" resultType="com.ace.company_news.model.Company_newsDTO">
	select * from company_news where news_idx=#{news_idx}
	</select>
	
	<update id="company_newsUpdate" parameterType="com.ace.company_news.model.Company_newsDTO">
	update company_news set news_title=#{news_title},news_writer=#{news_writer},news_content=#{news_content} where news_idx=#{news_idx}
	</update>
	
	<update id="company_newsReadnumUpdate" parameterType="Integer">
	update company_news set news_readnum=news_readnum+1 where news_idx=#{news_idx}
	</update>
	
	<select id="company_newsPreviousNews" parameterType="Integer" resultType="com.ace.company_news.model.Company_newsDTO">
	SELECT * FROM (SELECT * FROM company_news WHERE news_writedate <![CDATA[<]]> (SELECT news_writedate FROM company_news WHERE news_idx=#{news_idx})ORDER BY news_writedate desc)
	WHERE ROWNUM = 1
	</select>
	
	<select id="company_newsNextNews" parameterType="Integer" resultType="com.ace.company_news.model.Company_newsDTO">
	SELECT * FROM (SELECT * FROM company_news WHERE news_writedate > (SELECT news_writedate FROM company_news WHERE news_idx=#{news_idx})ORDER BY news_writedate ASC)
	WHERE ROWNUM = 1
	</select>
</mapper>







